
<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head') %>
    </head>
<body>
    <!-- HEADER -->

    <header>
        <%- include('./partials/header') %>
    </header>  

    <main>
      <div class="container-fluid">
        <div class="row">
          <!-- Left column with filters -->
          <div class="col-2">
            <div class="price-input">
              <div class="field">
                <span>Min</span>
                <input type="number" class="input-min" value="2500">
              </div>
              <div class="separator">-</div>
              <div class="field">
                <span>Max</span>
                <input type="number" class="input-max" value="7500">
              </div>
            </div>
            <div class="slider">
              <div class="progress"></div>
            </div>
            <div class="range-input">
              <input type="range" class="range-min" min="0" max="30000" value="7500" step="100">
              <input type="range" class="range-max" min="0" max="30000" value="22500" step="100">
            </div>
          </div>
        </div>
      </div>      
    </main>
    
    <footer>
        <%- include('./partials/footer') %>
    </footer>    
       
    <script src="js/priceRange.js"></script>

     <!-- BOOTSRAP ENDING LINE -->
    <script 
     src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" 
     integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" 
     crossorigin="anonymous">
    </script>
    <!-- FOOTER -->
</body>
</html>